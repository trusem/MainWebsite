---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
import Container from './Container.astro';

// Get current path to determine if we're on the index page
const currentPath = Astro.url.pathname;
const isIndexPage = currentPath === '/';
---

<header class="py-10">
	<Container>
			<nav class="relative z-50 flex justify-between">
				<div class="flex items-center md:gap-x-12">
					<a href="/" aria-label="Home"></a>
					<div class="hidden md:flex gap-x-6">
						<HeaderLink href="#features">Features</HeaderLink>
						<HeaderLink href="#testimonials">Testimonials</HeaderLink>
						<HeaderLink href="#pricing">Pricing</HeaderLink>
						<HeaderLink href="/blog">Blog</HeaderLink>
					</div>
				</div>
				<div class="flex items-center gap-x-5 md:gap-x-8">
					{isIndexPage && (
						<a href="#pricing" color="blue">
							<button class="text-sm rounded-full py-2 px-4 bg-blue-600 text-white hover:bg-blue-500 hover:text-slate-100 focus-visible:outline-blue-600">
								Get me Started
							</button>
						</a>
					)}
				</div>
			</nav>
	</Container>
</header>

